.container-chat
	height calc(100vh - 55px)
	position relative

	&-messages
		padding 1em
		height calc(100vh - 187.73px)
		overflow-y auto

		.message
			background #b3e5fc
			padding .5em
			overflow hidden
			position relative
			margin-bottom 1em
			&.me
				background rgba(179, 229, 252, 0.32)

			span.text
				display block
				min-height 30px
				margin-bottom 1em

			strong.username
				font-size 12px
				position absolute
				bottom .5em
				left .5em
				color #353535

			time.date
				position absolute
				right .5em
				bottom .5em
				font-size 12px
				color grey

			img.emoji
				width 30px


	&-formulario
		position fixed
		bottom 0
		left 0
		right 0

	&-form
		border-top 1px solid rgba(128, 128, 128, 0.41)
		position relative

		&-content-emojis
			display none
			padding .2em 0
			width 250px
			height 200px
			overflow-y auto
			position absolute
			right .5em
			top -220px
			box-shadow 0px 0px 15px 1px rgba(#777 .5)
			border-radius .3em
			background #fafafa
			img
				margin 0 .3em
				cursor pointer

		&-text
			outline none
			padding .8em
			padding-top 2em
			resize none
			width calc(100% - 125px)
			border none
			position relative
			box-sizing border-box

		&-buttons
			position absolute
			right .6em
			top 1em
			overflow hidden


		&-emoji
			outline none
			background none
			padding 0
			border none
			position relative
			top 10px
			float left
			margin-right .5em

			img
				padding 0
				display block
				margin 0 auto
				width 30px
				height 30px

		&-send
		 	outline none
			color verde-claro
			background azul-oscuro
			padding 0
			border none
			border-radius 50%
			font-size 2.3em
			float right
			width 50px
			height 50px
			&:before
				display block
				transform rotate(-24deg)
				position: relative
				top -3px
				right -2px
